{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/coverage": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "jest.pathToConfig": "./config/jest/config.vscode.js",
  "jest.showCoverageOnLoad": true,
  "eslint.enable": true,
  "eslint.options": {
    "configFile": "./config/eslint/config.dev.js",
    "ignoreFile": "./config/ignorePatterns"
  },
  "codemetrics.nodeconfiguration.ReturnStatement": 0,
  "codemetrics.nodeconfiguration.CaseClause": 0,
  "codemetrics.nodeconfiguration.DefaultClause": 0
}
